{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ publication.contenu }}</td>
            </tr>
            <tr>
                <th>ComOuvert</th>
                <td>{{ publication.comOuvert ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nombre Commentaire</th>
                <td>{{ nbcom }}</td>
            </tr>
            <tr>
                <th>Anonyme</th>
                <td>{{ publication.anonyme ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ publication.likes }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ publication.valide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateC</th>
                <td>{{ publication.dateC ? publication.dateC|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateM</th>
                <td>{{ publication.dateM ? publication.dateM|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Vues</th>
                <td>{{ publication.vues }}</td>
            </tr>
        </tbody>
    </table>
    {% if (like==0) %}
    <a href="{{ path('app_publication_like', {'id': publication.id}) }}">Like</a>
    {%else %}
    <a href="{{ path('app_publication_dislike', {'id': publication.id}) }}">Dislike</a>
    {% endif %}
    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>
    <a href="{{ path('app_publication_index') }}">back to list</a>
    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
