{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
<h1>index Consultation</h1>
<div class="flex justify-center items-center h-screen bg-blue-200">
    <div class="w-full max-w-md bg-gray-200 p-4 rounded-md">
            <div class="mb-4">
    <table>
            <tr>
                <th>Id</th>
                <th>Duree</th>
                <th>Note</th>
                <th>AvisPatient</th>
                <th>RecommandationSuivi</th>
                <th>actions</th>
            </tr>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.duree ? consultation.duree|date('H:i:s') : '' }}</td>
                <td>{{ consultation.note }}</td>
                <td>{{ consultation.avisPatient }}</td>
                <td>{{ consultation.RecommandationSuivi ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_consultation_show', {'id': consultation.id}) }}">show</a>
                    <a href="{{ path('app_consultation_edit', {'id': consultation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>

    <a href="{{ path('app_consultation_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full">Create new</a>
    </div>
    </div>
{% endblock %}
