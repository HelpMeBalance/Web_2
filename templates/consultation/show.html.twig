{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}
<h1>show Consultation</h1>
<div class="flex justify-center items-center h-screen bg-blue-200">
    <div class="w-full max-w-md bg-gray-200 p-4 rounded-md">
            <div class="mb-4">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ consultation.id }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ consultation.duree ? consultation.duree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ consultation.note }}</td>
            </tr>
            <tr>
                <th>AvisPatient</th>
                <td>{{ consultation.avisPatient }}</td>
            </tr>
            <tr>
                <th>RecommandationSuivi</th>
                <td>{{ consultation.RecommandationSuivi ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
            </div>

            <div class="mb-4">
    <a href="{{ path('app_consultation_index') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full">back to list</a>
            </div>
    <div class="mb-4">
    <a href="{{ path('app_consultation_edit', {'id': consultation.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full">edit</a>
    </div>
    <div class="mb-4">
    {{ include('consultation/_delete_form.html.twig') }}
</div>
</div>
</div>
{% endblock %}
