{% extends 'admin/base_admin.html.twig' %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-4">
        <h1 class="text-xl font-semibold">Commandes Management</h1>
    </div>
    <div class="bg-white shadow-md rounded-lg">
        <table class="min-w-full leading-normal">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ID</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total Price</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Address</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Payment Method</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">User ID</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Username</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.id }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.totalPrice }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.address }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.paymentmethode }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.status }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.user.id }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ commande.user.username }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}" class="text-blue-600 hover:text-blue-900">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    {# Button to toggle statistics display #}
    <div class="mt-4">
        <button id="showStatistics" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Show Statistics
        </button>
    </div>

    {# Payment Method Statistics Section #}
    <div id="statisticsSection" class="mt-8" style="display: none;">
        <canvas id="paymentMethodChart" width="400" height="200"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const cardPercentage = 60;
    const cashPercentage = 40;

    const ctx = document.getElementById('paymentMethodChart').getContext('2d');
    const paymentMethodChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Card', 'Cash'],
            datasets: [{
                data: [cardPercentage, cashPercentage],
                backgroundColor: [
                    'rgba(54, 162, 235, 0.8)', // Blue color for card
                    'rgba(255, 99, 132, 0.8)' // Red color for cash
                ]
            }]
        },
        options: {
            responsive: true,
            legend: {
                position: 'bottom'
            }
        }
    });

    // Show/hide statistics section when button is clicked
    document.getElementById('showStatistics').addEventListener('click', function() {
        const statisticsSection = document.getElementById('statisticsSection');
        if (statisticsSection.style.display === 'none') {
            statisticsSection.style.display = 'block';
        } else {
            statisticsSection.style.display = 'none';
        }
    });
});
</script>
{% endblock %}
