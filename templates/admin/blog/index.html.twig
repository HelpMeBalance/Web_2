{# templates/admin/user/index.html.twig #}


{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-4">
        <h1 class="text-xl font-semibold">Blog Management</h1>
    </div>
    <div class="bg-white shadow-md rounded-lg">
        <table class="min-w-full leading-normal">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Title</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Content</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Posted By</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">State</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Views</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Comments</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Updated At</th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100"></th>
                </tr>
            </thead>
            <tbody>
                {% for publication in publications %}
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{publication.titre}}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ publication.contenu|slice(0, 30) ~ (publication.contenu|length > 30 ? '...' : '') }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{publication.user.lastname|capitalize}} {{publication.user.firstname|capitalize}}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{publication.valide ? 'Approved' : 'Under Review' }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{publication.vues}}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm ">
                       
                        {% set commentCount = commentaireRepository.findAllUnderPublication(publication)|length %}
                        {% if publication.comOuvert %}
                            {% if commentCount > 0 %}
                                <a href="{{ path('app_blogDetails', {'id': publication.id,'showmore':0}) }}"> <i class="fas fa-comment fa-flip-horizontal fa-lg"></i> {{ commentCount }}</a>
                            {% else %}
                            <i class="fa-duotone fa-empty-set fa-lg"></i> Comments
                            {% endif %}
                        {% else %}
                            <i class="fas fa-lock fa-lg"></i> Comments
                        {% endif %}
    
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ publication.dateM|date('j F Y H:i:s') }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right">
