{% extends 'frontClient/base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prix Total</th> {# Updated column header to "Prix Total" #}
                <th>Quantit√©</th>
                <th>Article</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for panier in paniers %}
                <tr>
                    <td>{{ panier.prixTot }}</td> {# Updated property name to "prixTot" #}
                    <td>{{ panier.quantity }}</td> {# Updated property name to "quantity" #}
                    <td>{{ panier.article.nom }}</td> {# Access article properties directly #}
                    <td>
                        <a href="{{ path('app_panier_delete', {'id': panier.id}) }}">Delete</a>
                        <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td> {# Adjusted colspan to match the number of columns #}
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"></td> {# Colspan to fill the entire row #}
                <td>Total: {{ totalSum }}</td> {# Display total sum here #}
            </tr>
        </tfoot>
    </table>

    
    {# Button to go to Commande page #}
    <a href="{{ path('app_commande_new') }}" class="btn btn-primary">Commander</a> {# Updated path to "app_commande_new" #}
{% endblock %}
