{% extends 'frontClient/base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>PrixTot</th>
                <th>Quantit√©</th>
                <th>Article</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for panier in paniers %}
                <tr>
                    <td>{{ panier.PrixTot }}</td>
                    <td>{{ panier.Quantity }}</td>
                    <td>{{ panier.article.nom }}</td> {# Access article properties directly #}
                    <td>
                        <a href="{{ path('app_panier_delete', {'id': panier.id}) }}">Delete</a>
                        <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td> {# Colspan to fill the entire row #}
                <td>Total: {{ totalSum }}</td> {# Display total sum here #}
            </tr>
        </tfoot>
    </table>

    <a href="{{ path('app_panier_new') }}"class="btn btn-primary">Ajouter un article</a>
    
    {# Button to go to Commande page #}
    <a href="{{ path('app_commande_index') }}" class="btn btn-primary">Commander</a>
{% endblock %}
