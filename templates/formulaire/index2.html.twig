{% extends 'frontClient/base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow">
                    <div class="card-body p-2">
                        <h3 class="card-title text-center mb-4">Thank you!</h3>
                        <form action="{{ path('app_rendez_vous_index') }}">
                            <button type="submit" class="btn btn-primary btn-lg px-4 py-2">
                                <i class="fa-solid fa-arrow-right"></i>
                            </button></br>
                        </form>
                        {% for form in formulaires %}
                        {%if form.RendezVous == rv %}
                            <div class="container mt-5">
                                <div class="row">
                                    <div class="col-lg-8 mx-auto">
                                        <div class="card shadow">
                                            <div class="card-body p-4">
                                                {% for question in form.Question %}
                                                    {{ question.question }}
                                                {% endfor %}
                                                {% for reponse in form.Reponse %}
                                                    <div class="col-lg-8 mx-auto">
                                                        <div class="card shadow">
                                                            <div class="card-body p-4">
                                                                {{ reponse.reponse }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {%endif%}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
