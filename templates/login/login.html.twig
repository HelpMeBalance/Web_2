{% extends 'frontClient/base.html.twig' %}


{% block body %}
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://42f2671d685f51e10fc6-b9fcecea3e50b3b59bdc28dead054ebc.ssl.cf5.rackcdn.com/illustrations/Login_re_4vu2.svg"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                      <form method="post" novalidate>

                <input
                  name="_username"
                  id="username"
                  autocomplete="email"
                  required
                  autofocus
                  type="text"
                  class="form-control mb-4 p-4"
                  value="{{ last_username }}"
                  placeholder="E-mail Address"
                  required
                />

                <input
                  name="_password"
                  autocomplete="current-password"
                  class="form-control mb-4 p-4"
                  type="password"
                  id="password"
                  placeholder="Password"
                  required
                />
                <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
                >
                {% if error %}
                    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <input type="checkbox" class="form-check-input me-2" id="chk1" /><label for="chk1"
                  >Remmeber me</label
                >
                                <div class="d-flex">

                <div class="form-button mt-4">
                  <button id="submit" type="submit" class="btn btn-primary btn-lg px-4 py-2">Login</button>
                                    <a href="/reset-password">Forget password?</a>
                <a href="{{ path('connect_google') }}" class="btn btn-danger p-2 google-button">
                  <i class="fab fa-google px-2"></i> Signin with Google
                </a>
                </div>

                  <a href="forget.html">Forget password?</a>
                </div>
              </form>
          <div class="text-center text-lg-start mt-4 pt-2">
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/register"
                class="link-danger">Register</a></p>
          </div>

      </div>
    </div>
  </div>
</section>
{% endblock %}
