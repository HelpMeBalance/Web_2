    <script>
  const messages = [
    "You're doing great!",
    "Keep pushing forward!",
    "Every step is progress, no matter how small.",
    "Believe in yourself!",
    "You are enough!",
    "You are loved!",
    "You are not alone!",
    "You are doing the best you can!",
    "You are stronger than you think!",
    "You are capable of amazing things!",
    "You are worthy of love and respect!",
    
  ];
  function showToast() {
    Toastify({
      text: messages[Math.floor(Math.random() * messages.length)],
      duration: 10000, // Toast will display for 10 seconds
      close: true,
      gravity: "top", // Toast position
      position: "right", // Toast position
      backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      className: "info",
    }).showToast();
  }
  setInterval(showToast, 30000); // Show the toast every 5 minutes (300000 milliseconds)
  document.addEventListener('DOMContentLoaded', function() {
  // Initially hide the chatbot iframe and show only the 'open-btn'
  document.getElementById('chatbot-iframe').style.display = 'none';
  document.getElementById('close-btn').style.display = 'none';
  document.getElementById('open-btn').style.display = 'block';
  // 'Open' button click event
  document.getElementById('open-btn').addEventListener('click', function() {
      document.getElementById('chatbot-iframe').style.display = 'block';
      this.style.display = 'none'; // Hide 'Open' button
      document.getElementById('close-btn').style.display = 'block'; // Show 'Close' button
  });
  // 'Close' button click event
  document.getElementById('close-btn').addEventListener('click', function() {
      document.getElementById('chatbot-iframe').style.display = 'none';
      this.style.display = 'none'; // Hide 'Close' button
      document.getElementById('open-btn').style.display = 'block'; // Show 'Open' button
  });
});
