{% extends 'frontClient/base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow ">
                    <br class="card-body p-2">
                    <h3 class="card-title text-center mb-4">Questions</h3>
                    {% for question in questions %}
                        <div class="px-5">
                        <form action="{{ path('app_question_show', {'id': question.id}) }}" class="d-flex p-2">
                            <button type="submit" class="btn btn-primary btn-lg px-4 py-2 d-flex justify-content-center p-2 w-100">
                                {{ question.question }}
                            </button>
                        </form>
                        <div class="d-flex justify-content-evenly p-5">
                        <form action="{{ path('app_question_delete', {'id': question.id}) }}">
                            <button type="submit" class="btn btn-danger btn-lg px-4 py-4">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                            </br>
                        </form>
                        <form action="{{ path('app_question_edit', {'id': question.id}) }}">
                            <button type="submit" class="btn btn-secondary btn-lg px-4 py-4">
                                <i class="fa-solid fa-edit"></i>

                            </button>
                            </br>
                        </form>
                        </div>
                        </div>
                    {% endfor %}
                    {{ include('question/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}