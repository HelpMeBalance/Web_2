{% extends 'base.html.twig' %}

{% block title %}List Commentaire Under {% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id  </th>
                <th>Contenu  </th>
                <th>Anonyme  </th>
                <th>Likes  </th>
                <th>Valide  </th>
                <th>DateC  </th>
                <th>DateM  </th>
                <th>actions  </th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.anonyme ? 'Yes' : 'No' }}</td>
                <td>{{ commentaire.likes }}</td>
                <td>{{ commentaire.valide ? 'Yes' : 'No' }}</td>
                <td>{{ commentaire.dateC ? commentaire.dateC|date('d-M-y H:i:s') : '' }}</td>
                <td>{{ commentaire.dateM ? commentaire.dateM|date('d-M-y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_publication_show', {'id': publication.id}) }}"><strong>show publication </strong></a>
    <a href="{{ path('app_commentaire_new', {'idPublication': publication.id}) }}">Create new</a>
{% endblock %}
