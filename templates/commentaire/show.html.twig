{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>Anonyme</th>
                <td>{{ commentaire.anonyme ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ commentaire.likes }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ commentaire.valide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateC</th>
                <td>{{ commentaire.dateC ? commentaire.dateC|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateM</th>
                <td>{{ commentaire.dateM ? commentaire.dateM|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {% if (like==0) %}
    <a href="{{ path('app_commentaire_like', {'id': commentaire.id}) }}">Like</a>
    {%else %}
    <a href="{{ path('app_commentaire_dislike', {'id': commentaire.id}) }}">Dislike</a>
    {% endif %}
    <a href="{{ path('app_commentaire_index') }}">back to list</a>

    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>

    {{ include('commentaire/_delete_form.html.twig') }}
{% endblock %}
